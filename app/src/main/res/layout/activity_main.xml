<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="com.example.melon_i7.teamgame.activity.MainActivity"
    android:background="@drawable/a1">

    <TextView
        android:id="@+id/a_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Team Game"
        android:textSize="40sp"
        android:textColor="#6cd966"
        android:gravity="center_horizontal"
         />
    <ImageView
        android:id="@+id/a_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/a_text"
        android:src="@drawable/a2" />
    <LinearLayout
        android:id="@+id/a_l1"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/a_bt1"
            android:layout_width="100dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:text="开始组队"
            android:textSize="25sp"
            android:background="@drawable/select"/>
        <Button
            android:id="@+id/a_bt2"
            android:layout_width="100dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:layout_marginRight="20dp"
            android:text="游戏说明"
            android:textSize="25sp"
            android:background="@drawable/select1"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="组队小游戏"
        android:textSize="40sp"
        android:textColor="#f5b00f"
        android:gravity="center_horizontal"
        android:layout_above="@id/a_l1"
        android:layout_marginBottom="30dp" />
</RelativeLayout>

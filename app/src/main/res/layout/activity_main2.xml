<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="com.example.melon_i7.teamgame.activity.Main2Activity">
    <LinearLayout
        android:id="@+id/L1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/RL_1"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@drawable/team_bg"
            android:layout_marginRight="3dp" >
            <ImageView
                android:id="@+id/image_1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:visibility="invisible"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/fire"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/RL_2"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@drawable/team_bg"
            android:layout_marginRight="3dp">
            <ImageView
                android:id="@+id/image_2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:visibility="invisible"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/fire"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/RL_3"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@drawable/team_bg"
            android:layout_marginRight="3dp">
            <ImageView
                android:id="@+id/image_3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:visibility="invisible"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/fire"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/RL_4"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@drawable/team_bg">
            <ImageView
                android:id="@+id/image_4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:visibility="invisible"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/fire"/>
        </RelativeLayout>
    </LinearLayout>
    <ListView
        android:id="@+id/list_1"
        android:layout_below="@+id/L1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_above="@+id/L3"></ListView>
    <LinearLayout
        android:id="@+id/L3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@+id/L2">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/text_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="安图恩攻坚战"
                android:textSize="13sp"
                android:textStyle="italic"
                android:textColor="#6cf4eb"/>

            <EditText
                android:id="@+id/ed1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="请输入倍率"
                android:textColor="#b14e24"
                android:textColorHint="#d4cccc"
                android:textSize="12sp"
                android:textStyle="bold"
                android:numeric="integer"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/bt1"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:text="攻击"
                    android:textColor="#f4e806"
                    android:background="@drawable/select1"
                    />
                <Button
                    android:id="@+id/bt2"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:text="角色展示"
                    android:textColor="#f4e806"
                    android:background="@drawable/select"
                    />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="0.22"
            android:background="@drawable/v1"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/L2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/text_2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间限制!"
            android:textColor="#f00000"
            android:textSize="13sp" />
        <ProgressBar
            android:id="@+id/p1"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_marginTop="6dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/text_2"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="战斗力"
        android:textColor="#f00000"
        android:gravity="center" />
</RelativeLayout>
